

<!-- include header -->
<%- include('includes/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="form-title text-center">
            <h2 class="text-dark">Admin Login</h2>
        </div>

        <!-- form handling -->
        <form action="/admin/home" method="POST" id="add_customers">
            <div class="new_user">
                <div class="form-group">
                    <input type="text" name="" class="<%= invalidCredentials === true ? 'invalidCredentials' : 'invalidCredentials_disable' %>" value="Invalid Credentials!!!"  disabled>
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="" placeholder="Enter admin email">
                </div>
                <div class="form-group">
                    <label for="name" class="text-light">Password</label>
                    <input type="password" name="password" value="" placeholder="Enter admin password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Login</button>
                </div>
            </div>
        </form>
       
    </div>
</main>
<div class="d-flex" style="justify-content: center;">
    <a href="/">
        <div class="admin-login-link">
            Customer Login
        </div>
    </a>
</div>
<!-- /Main Site -->

<!-- include footer -->
<%- include('includes/_footer') %>
