
<!-- include header -->
<%- include('includes/_header') %>
<!-- /include header -->
<header id="header">
    <nav>
        <div class="container">
            <div class="text-center">
                <a href="/" class="nav-brand text-white">Dashboard</a>
            </div>
        </div>
    </nav>
</header>
  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/admin/home"><i class="fas fa-angle-double-left"></i> All Customers</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Customer</h2>
        </div>

         <!-- form handling -->
 <form action="/admin/update-customer" method="POST" id="add_customers">
    <div class="new_user">
        <div class="form-group">
            <input type="text" name="" value="Details Updated Successfully" class="<%= detailsUpdated === true ? 'account_created_success' : 'account_created_disable' %>" disabled>
            <input type="text" name="" value="Email already exists" class="<%= emailExists === true ? 'emailExists' : 'emailExists_disable' %>" disabled>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= customer._id %>">
            <input type="text" name="name" value="<%= customer.name %>" placeholder="Enter customer name">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= customer.email %>" placeholder="Enter customer email">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%= customer.gender == 'Male' ? 'checked' : '' %> >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female"  <%= customer.gender == 'Female' ? 'checked' : '' %>  >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Password</label>
            <input type="text" name="password" value="<%= customer.password %>" placeholder="Enter customer password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('includes/_footer') %>
<!-- /include footer -->
