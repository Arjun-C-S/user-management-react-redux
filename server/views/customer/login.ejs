
<!-- include header -->
<%- include('includes/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="form-title text-center">
            <h2 class="text-dark">Customer Login</h2>
        </div>

        <!-- form handling -->
        <form action="/customer/home" method="POST" id="add_customers">
            <div class="new_user">
                <div class="form-group">
                    <input type="text" name="" value="Invalid Credentials!!!" class="<%= invalidCredentials === true ? 'invalidCredentials' : 'invalidCredentials_disable' %>" disabled>
                    <input type="text" name="" value="Account Created Successfully" class="<%= accountCreated === true ? 'account_created_success' : 'account_created_disable' %>" disabled>
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Email</label>
                    <input type="text" name="email" value="" placeholder="Enter customer email">
                </div>
                <div class="form-group">
                    <label for="name" class="text-light">Password</label>
                    <input type="password" name="password" value="" placeholder="Enter customer password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Login</button>
                </div>
            </div>
        </form>
       
    </div>
</main>
<div class="signup-link">
    <div class="d-flex ">
        Don't have an account? <a href="/customer/signup" class="ml-2">&nbsp&nbsp Sign Up</a>
    </div>
</div>
<div class="d-flex" style="justify-content: center;">
    <a href="/admin/login">
        <div class="admin-login-link">
            Admin Login
        </div>
    </a>
</div>
<!-- /Main Site -->

<!-- include footer -->
<%- include('includes/_footer') %>
<!-- /include footer -->






